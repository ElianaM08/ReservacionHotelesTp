@model IEnumerable<ReservacionHoteles.Models.Hotel>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro de Hoteles</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Hoteles
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
          
           
            <th>
                @Html.DisplayNameFor(model => model.Destinos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaSalida)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

                <td>
                    <img src="~/imagenes/@item.ImagemHotel"
                         class="rounded-start"
                         height="150" width="150"
                         asp-append-version="true" />
                    <br>
                    @item.Descripcion
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            
            
            <td>
                @Html.DisplayFor(modelItem => item.Destinos.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaSalida)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
