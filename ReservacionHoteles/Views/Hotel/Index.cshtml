@model IEnumerable<ReservacionHoteles.Models.Hotel>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro de Hoteles</h1>

<p>
    <a asp-action="Create" class="btn btn-create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Hoteles
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
          
           
            <th>
                @Html.DisplayNameFor(model => model.Destinos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaSalida)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

                <td>
                    <img src="~/imagenes/@item.ImagemHotel"
                         class="rounded-start"
                         height="150" width="150"
                         asp-append-version="true" />
                    <br>
                    @item.Descripcion
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            
            
            <td>
                @Html.DisplayFor(modelItem => item.Destinos.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaSalida)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-detail">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 5px;
        font-size: 1rem;
        font-weight: bold;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        color: white;
        transition: background 0.3s ease;
    }
    .btn-create{
        background-color:cornflowerblue;
    }
        .btn-create:hover{
            background-color:cornflowerblue;
        }
   
    .btn-edit {
        background-color: #3498db;
    }

        .btn-edit:hover {
            background-color: #2980b9;
        }

   
    .btn-delete {
        background-color: #e74c3c;
    }

        .btn-delete:hover {
            background-color: #c0392b;
        }

    .btn-detail {
        background-color: #2ecc71;
    }

        .btn-detail:hover {
            background-color: #27ae60;
        }

    .button-container {
        display: flex;
        gap: 10px;
    }


</style>