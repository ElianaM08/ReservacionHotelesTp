@model ReservacionHoteles.Models.GestionReserva

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

    <div class="card">
        <div class="card-header">
            <b>Gestionar Reservas</b>
        </div>
        <div class="card-body">
              <form asp-action="Create">
                      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   <div class="form-row">
                <div class="form-group col-md-6">
                            <label asp-for="FechaHoraEntrada" class="control-label"></label>
                            <input asp-for="FechaHoraEntrada" class="form-control" />
                            <span asp-validation-for="FechaHoraEntrada" class="text-danger"></span>
                        </div>
                   </div>
                <div class="form-group col-md-6">
                    <label asp-for="FechaHoraSalida" class="control-label"></label>
                    <input asp-for="FechaHoraSalida" class="form-control" />
                    <span asp-validation-for="FechaHoraSalida" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="HotelRefId" class="control-label"></label>
                    <select asp-for="HotelRefId" class ="form-control" asp-items="ViewBag.HotelRefId"></select>
                </div>
                 <div class="form-group col-md-6">
                    <label asp-for="DestinosRefId" class="control-label"></label>
                    <select asp-for="DestinosRefId" class ="form-control" asp-items="ViewBag.DestinosRefId"></select>
                </div>
                 <div class="form-row">
                     <div class="form-group col-md-6">
                        <label asp-for="HabitacionesRefId" class="control-label"></label>
                        <select asp-for="HabitacionesRefId" class="form-control" asp-items="ViewBag.HabitacionesReId"></select>
                        <span asp-validation-for="HabitacionesRefId" class="text-danger"></span>
                    </div>
                </div>
       
                 <div class="form-group col-md-6">
                    <label asp-for="Tarifa1RefId" class="control-label"></label>
                    <select asp-for="Tarifa1RefId" class ="form-control" asp-items="ViewBag.Tarifa1RefId"></select>
                </div>
         
                <div class="form-group col-md-6">
                    <label asp-for="FechaRegistro" class="control-label"></label>
                    <input asp-for="FechaRegistro" class="form-control" />
                    <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                </div>
              
                <div>
                    <input type="submit" value="Crear" class="btn btn-create" />
                    <a class="btn btn-info" asp-action="Index" class="btn btn-back">Volver</a>
                </div>
   
              </form>
         </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 5px;
        font-size: 1rem;
        font-weight: bold;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        color: white;
        transition: background 0.3s ease;
    }

    .btn-create {
        background-color: cornflowerblue;
    }

        .btn-create:hover {
            background-color: cornflowerblue;
        }

    .btn-back {
        background-color: darksalmon;
    }

        .btn-back:hover {
            background-color: burlywood;
        }
</style>